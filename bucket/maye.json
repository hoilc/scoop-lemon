{
    "version": "1.2.8",
    "description": "体积小巧、简单易用的快速启动工具",
    "homepage": "https://github.com/25H/Maya",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/25H/Maya/releases/download/1.2.8/Maye.1.2.8-20211227.zip",
            "hash": "ba0cf3eb3bb5dfd3d52f6699b2de3ea9c3e44660b12588728435010762bbf74e"
        }
    },
    "bin": "Maye.exe",
    "shortcuts": [
        [
            "Maye.exe",
            "Maye"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\cfg.ini\")) { Set-Content -Encoding ASCII -Path \"$dir\\cfg.ini\" -Value '[cfg]\nautoStart=0\nnewVersionCheck=0\npriorityRelativePath=1' }",
        "if (!(Test-Path \"$persist_dir\\JDB.json\")) { Set-Content -Encoding ASCII -Path \"$dir\\JDB.json\" -Value '{}' }"
    ],
    "persist": [
        "cache",
        "cfg.ini",
        "JDB.json"
    ],
    "checkver": {
        "url": "https://github.com/25H/Maya/releases/latest",
        "regex": "Maye.([\\d.]+)-(?<date>\\d+).zip"
    },
    "autoupdate": {
        "url": "https://github.com/25H/Maya/releases/download/$version/Maye.$version-$matchDate.zip"
    }
}
