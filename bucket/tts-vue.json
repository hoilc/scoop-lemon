            "hash": "5f81afed14b9c36f32d4bdb6601a59626118d55d6a92b2cdec21c12f6673d1b4",
            "pre_install": [
                "Expand-7zipArchive -Path (Get-ChildItem \"$dir\" 'tts-vue_*.exe' | Select-Object -First 1).FullName -DestinationPath \"$dir\" -Removal",
