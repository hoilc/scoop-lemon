                "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\", \"$dir\\Uninstall*\", \"$dir\\resources\\app-update.yml\"  -Force -Recurse"
            ]
        }
    },
    "bin": [
        [
            "tts-vue.exe",
            "tts-vue",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "shortcuts": [
        [
            "tts-vue.exe",
            "TTS-Vue",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "persist": "User Data",
    "checkver": {
        "github": "https://github.com/LokerL/tts-vue"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
