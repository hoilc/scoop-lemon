    "checkver": {
        "url": "https://www.bennewitz.com/bluefish/stable/binaries/windows_x64/",
        "regex": "Bluefish ([\\d.]+) Setup.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.bennewitz.com/bluefish/stable/binaries/windows_x64/Bluefish%20$version%20Setup.exe#/dl.7z"
            }
        }
    }
