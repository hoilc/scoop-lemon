{
    "version": "26.02",
    "description": "Monitors a number of web pages and tracks changes based on the content of the web pages.",
    "homepage": "https://sourceforge.net/projects/webchangemon/",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://sourceforge.net/projects/webchangemon/files/Windows/WebChangeMonitor_26_02-64bit.zip",
            "hash": "sha1:b4a3292a8c41e180a4af0e370c67ebf4de67bc56"
        },
        "32bit": {
            "url": "https://sourceforge.net/projects/webchangemon/files/Windows/WebChangeMonitor_26_02-32bit.zip",
            "hash": "sha1:19ac350d47ab2f69d625b8d083162c32caf90707"
        }
    },
    "shortcuts": [
        [
            "WebChangeMonitor.exe",
            "WebChangeMonitor"
        ]
    ],
    "post_uninstall": "if ($purge) { Remove-Item \"$env:LOCALAPPDATA\\WebChangeMonitor\" -Force -Recurse -ErrorAction SilentlyContinue }",
    "notes": [
        "WebChangeMonitor is NOT portable.",
        "Settings are stored in '%LOCALAPPDATA%\\WebChangeMonitor', and can be purged using 'scoop uninstall --purge webchangemonitor'."
    ],
    "checkver": {
        "url": "https://sourceforge.net/projects/webchangemon/rss?path=/Windows",
        "regex": "WebChangeMonitor_(?<year>\\d+)_(?<month>\\d+)-64bit",
        "replace": "${year}.${month}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://sourceforge.net/projects/webchangemon/files/Windows/WebChangeMonitor_$matchYear_$matchMonth-64bit.zip"
            },
            "32bit": {
                "url": "https://sourceforge.net/projects/webchangemon/files/Windows/WebChangeMonitor_$matchYear_$matchMonth-32bit.zip"
            }
        }
    }
}
