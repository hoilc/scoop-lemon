{
    "version": "1.16.0",
    "description": "Pinny Notes is a sticky note application with a button to \"pin\" a note making it always on top above other windows.",
    "homepage": "https://github.com/63BeetleSmurf/PinnyNotes",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/63BeetleSmurf/PinnyNotes/releases/download/v1.16.0/PinnyNotes-Portable-1.16.0-x64.zip",
            "hash": "874ba6d4b2fc2cbffcd42f8459fe15f3518519698308c8af016dd1d67f0e364a"
        }
    },
    "extract_dir": "Pinny Notes",
    "shortcuts": [
        [
            "Pinny Notes.exe",
            "Pinny Notes"
        ]
    ],
    "pre_install": [
        "if ((Test-Path \"$env:APPDATA\\Pinny Notes\\pinny_notes.sqlite\") -and (!(Test-Path \"$persist_dir\\pinny_notes.sqlite\"))) {",
        "    ensure \"$persist_dir\" | Out-Null",
        "    Write-Host -NoNewline 'Migrate database...'",
        "    Copy-Item \"$env:APPDATA\\Pinny Notes\\pinny_notes.sqlite\" \"$persist_dir\"",
        "}",
        "if (!(Test-Path \"$persist_dir\\pinny_notes.sqlite\")) { Set-Content -Encoding ASCII -Path \"$dir\\pinny_notes.sqlite\" -Value $null }"
    ],
    "persist": "pinny_notes.sqlite",
    "post_uninstall": "if ($purge) { Remove-Item \"$env:LOCALAPPDATA\\Pinny_Notes\" -Force -Recurse -ErrorAction SilentlyContinue }",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/63BeetleSmurf/PinnyNotes/releases/download/v$version/PinnyNotes-Portable-$version-x64.zip"
            }
        }
    }
}
