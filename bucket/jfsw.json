{
    "version": "20251227",
    "description": "JFShadowWarrior is 3D Realms' 1997 shooter Shadow Warrior updated for modern Windows, Mac, and Linux computers.",
    "homepage": "https://www.jonof.id.au/jfsw/index.html",
    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://www.jonof.id.au/files/jfsw/jfsw-20251227-win.zip",
            "extract_dir": "jfsw-20251227-win",
            "hash": "06a06ce758fbcf912eed7fbeddc1c705c6b4069286ab5fad715be8ed94d3c03f"
        }
    },
    "bin": "sw.exe",
    "shortcuts": [
        [
            "sw.exe",
            "JFShadowWarrior"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$dir\\user_profiles_disabled\")) { Set-Content -Encoding ASCII -Path \"$dir\\user_profiles_disabled\" -Value $null }",
        "if (!(Test-Path \"$persist_dir\\sw.cfg\")) { Set-Content -Encoding ASCII -Path \"$dir\\sw.cfg\" -Value $null }"
    ],
    "post_install": "Get-ChildItem \"$persist_dir\\*\" -Include '*.grp', '*.ogg' | Move-Item -Force -Destination $dir",
    "pre_uninstall": "Get-ChildItem \"$dir\\*\" -Include '*.grp', '*.ogg' | Move-Item -Force -Destination $persist_dir",
    "persist": "sw.cfg",
    "checkver": {
        "regex": "jfsw-([^-]+?)-win.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.jonof.id.au/files/jfsw/jfsw-$version-win.zip",
                "extract_dir": "jfsw-$version-win"
            }
        }
    }
}
